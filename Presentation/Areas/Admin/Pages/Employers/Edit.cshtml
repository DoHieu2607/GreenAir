    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employer.Salary" class="control-label"></label>
                <input asp-for="Employer.Salary" class="form-control" />
                <span asp-validation-for="Employer.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employer.JobId" class="control-label"></label>
                <select asp-for="Employer.JobId" class="form-control" asp-items="ViewBag.JobId"></select>
                <span asp-validation-for="Employer.JobId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Employer.Id" />
            <div class="form-group">
                <label asp-for="Employer.Name" class="control-label"></label>
                <input asp-for="Employer.Name" class="form-control" />
                <span asp-validation-for="Employer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employer.Phone" class="control-label"></label>
                <input asp-for="Employer.Phone" class="form-control" />
                <span asp-validation-for="Employer.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

