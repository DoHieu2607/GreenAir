<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Route.RouteId" />
            <div class="form-group">
                <label asp-for="Route.Origin" class="control-label"></label>
                <select asp-for="Route.Origin" class="form-control" asp-items="ViewBag.Origin"></select>
                <span asp-validation-for="Route.Origin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Route.Destination" class="control-label"></label>
                <select asp-for="Route.Destination" class="form-control" asp-items="ViewBag.Destination"></select>
                <span asp-validation-for="Route.Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

