@page
@model Presentation.Pages_Flights.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].Plane)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Flight) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Plane.PlaneId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FlightId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.FlightId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.FlightId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
